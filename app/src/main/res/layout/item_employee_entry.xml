<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/parentLayout"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">

    <TextView
        android:id="@+id/tvRvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Shahzaib"
        android:gravity="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@id/tvRvEmail"
        app:layout_constraintStart_toStartOf="@id/parentLayout"
        app:layout_constraintTop_toTopOf="@id/parentLayout"
        app:layout_constraintBottom_toBottomOf="@id/parentLayout"/>

    <TextView
        android:id="@+id/tvRvEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="shahrazeahmad07@gmail.com"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@id/ibRvEdit"
        app:layout_constraintStart_toEndOf="@id/tvRvName"
        app:layout_constraintTop_toTopOf="@id/parentLayout"
        app:layout_constraintBottom_toBottomOf="@id/parentLayout"
        android:layout_marginHorizontal="5dp"/>

    <ImageButton
        android:id="@+id/ibRvEdit"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/edit"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toStartOf="@id/ibRvDelete"
        app:layout_constraintTop_toTopOf="@id/parentLayout"
        app:layout_constraintBottom_toBottomOf="@id/parentLayout"
        app:layout_constraintStart_toEndOf="@id/tvRvEmail"/>

    <ImageButton
        android:id="@+id/ibRvDelete"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/remove"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/parentLayout"
        app:layout_constraintTop_toTopOf="@id/parentLayout"
        android:layout_marginStart="10dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>